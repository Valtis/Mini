<p id="notice"><%= notice %></p>

<h1>Images</h1>

<style>
    .thumbnail-image {
    overflow: hidden;
    height: 150px;
    }

    .thumbnail-image > img {
    width: 100%;
}
</style>


<div class="row">

  <% @images.each do |image| %>
      <div class="col-lg-3 col-sm-4 col-xs-6">
        <%= link_to "#{image_tag(image.S3Image.url(:medium), class: 'img-responsive')}".html_safe, image, class: 'thumbnail pull-left' if has_right_to_see_image(image) %>
      </div>
  <% end %>
</div>>