<li><%= link_to 'Upload image', new_image_path %></li>
<% if current_user.nil? %>
    <li><%= link_to 'Log in', new_sessions_path %></li>
    <li><%= link_to 'Register', new_user_path %></li>
<% else %>
    <% if current_user.has_moderator_privileges? %>
        <li><%= link_to 'Users', users_path %></li>
    <% end %>
    <li><%= link_to "#{current_user.username}", user_path(current_user) %></li>
    <li><%= link_to 'Albums', albums_path %></li>
    <li><%= link_to 'Log out', logout_path, method: :delete %></li>
<% end %>
