<h1><%= "#{@album.name} by #{@album.user.username}" %></h1>

<% if @album.user == current_user and current_user %>
    <%= link_to 'Change album name', edit_album_path %>
<% end %>



<% unless @album.images.empty? %>
    <p><strong>Album has the following images</strong></p>
    <% @album.visible_images_for(current_user).each do |image| %>
        <%= link_to "#{image_tag(image.S3Image.url(:thumb))}".html_safe, image %>
        <br/>
    <% end %>
<% end %>