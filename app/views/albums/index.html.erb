
<h1>Albums</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to "#{album.name}", album%></td>
        <td><%= link_to "#{album.user.username}", album.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create new album', new_album_path, class:'btn btn-primary' if logged_in? %>
